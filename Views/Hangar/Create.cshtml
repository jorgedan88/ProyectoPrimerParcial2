@model ProyectoPrimerParcial.ViewModels.HangarCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Hangar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreHangar" class="control-label"></label>
                <input asp-for="NombreHangar" class="form-control" />
                <span asp-validation-for="NombreHangar" class="text-danger"></span>
            </div>
            <br>
            <label asp-for="Sector" class="control-label"></label>
            <select asp-for="Sector" class="form-control">
            <option value="0">Norte</option>
            <option value="1">Sur</option>
            <option value="2">Este</option>
            <option value="3">Oeste</option>
            </select>            
            <br>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AptoMantenimiento" /> @Html.DisplayNameFor(model => model.AptoMantenimiento)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="oficinas" /> @Html.DisplayNameFor(model => model.oficinas)
                </label>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Aeronaves" class="control-label"></label>
                <select asp-for="Aeronaves" class="form-control" asp-items="ViewBag.Aeronaves"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
