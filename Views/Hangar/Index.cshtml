@* @model IEnumerable<ProyectoPrimerParcial.Models.Hangar> *@
@using ProyectoPrimerParcial2.ViewModels;
@model HangarIndexViewmodel

@{
    ViewData["Title"] = "Index";
}

<h1>Hangares</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Hangar</a>
</p>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Hangar">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilterHan" />
        </div>
        <br>
        <button class="btn btn-info" type="submit">Buscar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.hangars[0].NombreHangar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hangars[0].Sector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hangars[0].AptoMantenimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hangars[0].oficinas)
            </th>
            <th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.hangars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHangar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AptoMantenimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.oficinas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HangarId"class="btn btn-warning">Modificar</a> 
                <a asp-action="Details" asp-route-id="@item.HangarId" class="btn btn-primary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.HangarId"  class="btn btn-danger" onclick="return confirm('Â¿Esta seguro que quiere eliminar este instructor?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
