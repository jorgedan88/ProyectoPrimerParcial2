@model ProyectoPrimerParcial.Models.Aeronave

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de la aeronave</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoAeronave)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoAeronave)
        </dd>
            <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFabricacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaFabricacion)
        </dd>
    </dl>
    <div>
        <ol>
            @foreach (var item in Model.Hangars)
            {
                <li>@item.NombreHangar</li>
            }
        </ol>
    </div>    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AeronaveId" class="btn btn-warning">Editar</a> 
<br>
<br>
    <a asp-action="Index">Volver</a>
</div>
