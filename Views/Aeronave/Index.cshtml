@using ProyectoPrimerParcial.ViewModels;
@model AeronaveIndexViewmodels

@{
    ViewData["Title"] = "Index";
}

<h1>Aeronaves</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Aeronave</a>
</p>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Aeronave">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilter" />
        </div>
        <br>
        <button class="btn btn-info" type="submit">Buscar</button>
    </form>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoAeronave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFabricacion)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.aeronaves) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAeronave)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.FechaFabricacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AeronaveId"class="btn btn-warning">Modificar</a> 
                <a asp-action="Details" asp-route-id="@item.AeronaveId" class="btn btn-primary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.AeronaveId"  class="btn btn-danger" onclick="return confirm('Â¿Esta seguro que quiere eliminar este instructor?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
