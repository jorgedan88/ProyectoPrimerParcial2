@* @model ProyectoPrimerParcial.Models.Aeronave *@
@model ProyectoPrimerParcial.ViewModels.AeronaveEditlViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar aeronave</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AeronaveId" />
            <div class="form-group">
                <label asp-for="TipoAeronave" class="control-label"></label>
                <input asp-for="TipoAeronave" class="form-control" />
                <span asp-validation-for="TipoAeronave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFabricacion" class="control-label"></label>
                <input asp-for="FechaFabricacion" class="form-control" />
                <span asp-validation-for="FechaFabricacion" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-success" /> 
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
