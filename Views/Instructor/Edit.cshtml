@* @model ProyectoPrimerParcial.Models.Instructor *@
@model ProyectoPrimerParcial.ViewModels.InstructorEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar instructor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InstructorId" />
            <div class="form-group">
                <label asp-for="NombreInstructor" class="control-label"></label>
                <input asp-for="NombreInstructor" class="form-control" />
                <span asp-validation-for="NombreInstructor" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <br>
            <label asp-for="TipoLicencia" class="control-label"></label>
            <select asp-for="TipoLicencia" class="form-control">
            <option value="0">Comercial</option>
            <option value="1">Carga</option>
            <option value="2">Militar</option>
            </select> 
            <br>
            <div class="form-group">
                <label asp-for="NumeroLicencia" class="control-label"></label>
                <input asp-for="NumeroLicencia" class="form-control" />
                <span asp-validation-for="NumeroLicencia" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
            <label asp-for="FechaExpedicion" class="control-label"></label>
            <input asp-for="FechaExpedicion" class="form-control" />
            <span asp-validation-for="FechaExpedicion" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group form-check">
                <label class="form-check-label">
                <input class="form-check-input" asp-for="EnActividad" /> @Html.DisplayNameFor(model => model.EnActividad)
                </label>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AeronaveId" class="control-label"></label>
                <select asp-for="AeronaveId" class="form-control" asp-items="ViewBag.AeronaveId"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
