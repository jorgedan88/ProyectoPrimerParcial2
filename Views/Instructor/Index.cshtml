@using ProyectoPrimerParcial2.ViewModels;
@model InstructorViewmodels;

@{
    ViewData["Title"] = "Index";
}

<h1>Instructores de vuelo</h1>



<p>
    <a asp-action="Create" class="btn btn-success"> + Instructor</a>
</p>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Instructor">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilterIns"/>
        </div>
        <br>
        <button class="btn btn-info" type="submit">Buscar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].NombreInstructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].TipoLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].NumeroLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].FechaExpedicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].EnActividad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instructors[0].Aeronave.TipoAeronave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.instructors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreInstructor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoLicencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroLicencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaExpedicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnActividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aeronave.TipoAeronave)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-warning">Modificar</a> 
                <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-primary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.InstructorId"  class="btn btn-danger" onclick="return confirm('Â¿Esta seguro que quiere eliminar este instructor?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
