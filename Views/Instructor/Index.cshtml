@model IEnumerable<ProyectoPrimerParcial.Models.Instructor>

@{
    ViewData["Title"] = "Index";
}

<h1>Instructores de vuelo</h1>



<p>
    <a asp-action="Create" class="btn btn-success"> + Instructor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreInstructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroLicencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaExpedicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnActividad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AeronaveId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreInstructor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoLicencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroLicencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaExpedicion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnActividad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aeronave.TipoAeronave)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-warning">Modificar</a> 
                <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-primary">Detalle</a> 
                <a asp-action="Delete" asp-route-id="@item.InstructorId"  class="btn btn-danger" onclick="return confirm('Â¿Esta seguro que quiere eliminar este instructor?')">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
